{
  "settings": {
    "analysis": {
      "analyzer": {
        "autosuggest_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "asciifolding",
            "autosuggest_filter"
          ]
        }
      },
      "filter": {
        "autosuggest_filter": {
          "type": "edge_ngram",
          "min_gram": "1",
          "max_gram": "20",
          "token_chars": [
            "letter",
            "digit",
            "punctuation",
            "symbol"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "fields": {
          "suggest": {
            "type": "text",
            "analyzer": "autosuggest_analyzer",
            "search_analyzer": "simple"
          },
          "english": {
            "type": "text",
            "analyzer": "english"
          }
        }
      },
      "handle": {
        "type": "text",
        "fields": {
          "suggest": {
            "type": "text",
            "analyzer": "autosuggest_analyzer",
            "search_analyzer": "simple"
          },
          "english": {
            "type": "text",
            "analyzer": "english"
          }
        }
      },
      "about": {
        "type": "text",
        "fields": {
          "english": {
            "type": "text",
            "analyzer": "english"
          }
        }
      },
      "tags": {
        "type": "text",
        "fields": {
          "english": {
            "type": "text",
            "analyzer": "english"
          }
        }
      }
    }
  }
}
